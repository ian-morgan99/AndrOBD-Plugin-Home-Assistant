<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions for communicating with Home Assistant -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <!-- WiFi permissions for SSID-based transmission modes -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    
    <!-- Location permission required for WiFi scanning on Android 6.0+ -->
    <!-- Also used for future feature: sending vehicle GPS location to Home Assistant -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    
    <!-- Notification permission for Android 13+ (API 33+) -->
    <!-- Required to show foreground service notification and status updates -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    
    <!-- Foreground service permission for showing network indicator notification -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    
    <!-- Schedule exact alarm permission for Android 12+ to work around foreground service restrictions. -->
    <!-- On Android 13+ this is a restricted, user-controlled permission that must be enabled in system Settings. -->
    <!-- When not granted, the app falls back to inexact alarms, which may cause delayed plugin execution. -->
    <!-- SettingsActivity or other UI components should explain this to users and, if delays are observed, guide them -->
    <!-- to enable exact alarms in: Settings → Apps → [App name] → Alarms & reminders (or equivalent on their device). -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    
    <!-- WiFi hardware is optional - app works without it in some modes -->
    <uses-feature android:name="android.hardware.wifi" android:required="false"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Dark"
        tools:replace="android:allowBackup,android:label">

        <receiver android:name=".HomeAssistantPluginReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.fr3ts0n.androbd.plugin.IDENTIFY" />
                <category android:name="com.fr3ts0n.androbd.plugin.REQUEST" />
            </intent-filter>
        </receiver>
        
        <!-- Service starter for Android 12+ alarm-based workaround -->
        <receiver android:name=".HomeAssistantServiceStarter"
            android:exported="false"
            android:enabled="true"/>

        <service android:name=".HomeAssistantPlugin"
            android:exported="true"
            android:enabled="true"/>

        <activity
            android:name=".SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".LogViewerActivity"
            android:exported="false"
            android:label="Application Logs"/>

    </application>

</manifest>