<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Default configuration for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system" />
            <!-- Trust user-added CAs (for corporate environments) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext for local network addresses (Home Assistant may be on local network) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
        <!-- Local domain names -->
        <domain includeSubdomains="true">local</domain>
        <domain includeSubdomains="true">homeassistant.local</domain>
    </domain-config>
</network-security-config>
